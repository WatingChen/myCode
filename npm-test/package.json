{
  "name": "npm-test",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "mocha": "mocha tests/",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test mocha tests/",
    "watch": "npm-run-all --parallel watch:*",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.less\" -- npm run lint",
    "watch:test": "npm t -- --watch",
    "eslint": "eslint *.js",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint *.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "precover": "rm -rf coverage",
    "cover": "node scripts/cover.js",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "client": "npm-run-all --parallel client:*",
    "client:reload-server": "livereload client/",
    "client:static-server": "http-server client/"
  },
  "author": "WaitingChen",
  "license": "ISC",
  "config": {
    "port": 3000
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-plugin-vue": "^7.4.0",
    "http-server": "^0.12.3",
    "jsonlint": "^1.6.3",
    "livereload": "^0.9.1",
    "markdownlint": "^0.22.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "onchange": "^7.1.0",
    "opn-cli": "^5.0.0",
    "scripty": "^2.0.0",
    "shelljs": "^0.8.4",
    "stylelint": "^13.8.0"
  }
}