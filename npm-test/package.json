{
  "name": "npm-test",
  "version": "0.1.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "mocha": "mocha tests/",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test mocha tests/",
    "watch": "npm-run-all --parallel watch:*",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.less\" -- npm run lint",
    "watch:test": "npm t -- --watch",
    "eslint": "eslint *.js",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "bump": "scripty",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint *.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "precover": "rm -rf coverage",
    "cover": "node scripts/cover.js",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "client": "npm-run-all --parallel client:*",
    "client:reload-server": "livereload client/",
    "client:static-server": "http-server client/",
    "prebuild": "rm -rf dist && mkdir -p dist/{images,styles,scripts}",
    "build": "scripty",
    "build:images": "scripty",
    "build:styles": "scripty",
    "build:scripts": "scripty",
    "build:hash": "scripty",
    "predeploy": "yarn && npm run build",
    "deploy": "pm2 restart pm2.json",
    "logs": "tail -f logs/*"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.less": "stylelint",
    "*.css": "stylelint",
    "*.json": "jsonlint --quiet",
    "*.md": "markdownlint --config .markdownlint.json"
  },
  "author": "WaitingChen",
  "license": "ISC",
  "config": {
    "port": 3000
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "cssmin": "^0.4.3",
    "eslint": "^7.16.0",
    "eslint-plugin-vue": "^7.4.0",
    "express": "^4.17.1",
    "hashmark": "^5.0.0",
    "http-server": "^0.12.3",
    "husky": "^4.3.6",
    "imagemin-cli": "^6.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.5.3",
    "livereload": "^0.9.1",
    "markdownlint": "^0.22.0",
    "mocha": "^8.2.1",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "onchange": "^7.1.0",
    "opn-cli": "^5.0.0",
    "pm2": "^4.5.1",
    "replaceinfiles": "^1.1.4",
    "scripty": "^2.0.0",
    "shelljs": "^0.8.4",
    "stylelint": "^13.8.0",
    "uglify-es": "^3.3.9"
  }
}
